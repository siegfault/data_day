<h4>Total Time spent on activities:</h4>
<table class='table table-hover'>
  <tr>
    <th>Activity</th>
    <th>Total Time</th>
    <th>Percentage of Time</th>
  </tr>
  <% @actions_grouped_by_activity.each do |activity, actions| %>
    <% action_length = actions.map(&:length).sum %>
    <tr>
      <td><%= activity.name %></td>
      <td><%= distance_of_time_in_words(action_length) %></td>
      <td><%= formatted_percentage(amount: action_length, total: @total_activities_time) %></td>
    </tr>
  <% end %>
</table>

<% @timeline_data.each do |day, actions| %>
  <h4><%= day %></h4>
  <%= timeline(actions.map {|a| [a.name, a.start_at, a.end_at ]}) %>
<% end %>

